# Variables
CC := gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:%.c=%.o)
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic
RM := /bin/rm -f

# Rules
.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

# Dependencies
$(OBJ): m.h

# Special targets
.SILENT: clean oclean
